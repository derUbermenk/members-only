  <div class="box">
    <article class="media">
      <div class="media-content">
        <div class="content">
          <strong class="is-size-5"><%= post.title %></strong>
          <br>
          <small class="is-size-7"> 
            <%
              last_updated = post.updated_at.strftime("%B %d, %Y")
              member = post.member
              username = member.username
            %>
            <% if member_signed_in? %>
              <%= link_to username, member_path(member), class: "is-small is-ghost" %> | <%= last_updated %>
            <% end %>
          </small>
          <br>
          <p class="has-text-justified is-size-6" >
            <%= post.content %>
          </p>
        </div> 
      </div> 
    </article>
    <br>
    <% if post.member == current_member %>
      <div class="level-left">
        <div class="level-item">
            <%= link_to edit_post_path(post) do %>
              <span class="icon-text has-text-dark">
                <span class='icon'><i class='fas fa-pen fa-xs' aria-hidden='true'></i></span>
                <span><small>Edit</small></span>
              </span>
            <% end %>
        </div>
        <div class="level-item">
            <%= link_to post, method: :delete do %>
              <span class="icon-text has-text-dark">
              <span class='icon'><i class='fas fa-trash fa-xs' aria-hidden='true'></i></span>
              <span><small>Delete</small></span>
              </span>
            <% end %>
        </div>
      </div>
    <% end %>
  </div>