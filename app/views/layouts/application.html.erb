<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar is-dark" role='navigation' aria-label='main navigation' >
      <div class="navbar-brand"> 
          <%= link_to root_path, class: 'navbar-item' do %> 
            <h1 class='title is-5 has-text-white'>Members Only</h1>
          <% end %>
      </div>

      <% # configure this to change if user is either signed in or signed out %>
      <div class="navbar-end" >
        <div class="buttons pr-2">
          <% if member_signed_in? %>
            <%= link_to 'New Post', new_post_path, class: 'button is-light' %>
            <%= link_to 'Log out', destroy_member_session_path, method: :delete,class: 'button is-light' %>
          <% else %>
            <%= link_to 'Sign up', new_member_registration_path, class: 'button is-light' %>
            <%= link_to 'Log in', new_member_session_path, class: 'button is-light' %>
          <% end %>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
